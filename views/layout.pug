mixin tags(...items)
  .project__tags
    each item in items
      span ##{item}

mixin sectionHeader(text)
  .is-flex
    hr.rule--short
    h1.content__header #{text}
    hr.rule

mixin navLinks(...links)
  each link in links
    - const url = `/#${link.toLowerCase()}`;
    a.navbar__list-item.link(href=url) #{link.toUpperCase()}

