mixin sectionHeader(text)
  .is-flex
    hr.rule--short
    h1.content__header #{text}
    hr.rule
    
mixin sectionHead(title)
  .is-flex
    h2.section__title #{title}
    hr.section__rule.flex

mixin navLinks(...links)
  .is-flex
    each link in links
      a.navbar__list-item.link(href="#" + link.toLowerCase()) #{link}
    a.navbar__list-item--special(href="/resume") RESUMÃ‰

mixin project(img, title, subtitle, description, link1, link2, tags)
  .project.is-flex
    .project__content.is-flex
      img.content__image(src="/images/" + img)
      .project__info
        h2.project__info-title #{title}
        h4.project__info-subtitle #{subtitle}
        p.project__info-description #{description}
        a.project__button(href="" + link1) GitHub
        a.project__button(href="/" + link2)
        span.project__tags #{tags}

